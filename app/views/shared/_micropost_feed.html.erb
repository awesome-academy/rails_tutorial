<% @microposts.each do |micropost| %>
   <%= render micropost %>
  <div class="micropost mb-3 p-3 border rounded">
    <p>
      <strong><%= link_to micropost.user.name, micropost.user %></strong>
      <span class="timestamp text-muted">
        <%= time_ago_in_words(micropost.created_at) %> ago
      </span>
    </p>
    <p><%= micropost.content %></p>
  </div>
<% end %>
