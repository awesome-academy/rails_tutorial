<div class="micropost mb-3 d-flex">
  <div class="me-3">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  </div>

  <div>
    <strong><%= link_to micropost.user.name, micropost.user %></strong>
    <small class="text-muted">
      <%= time_ago_in_words(micropost.created_at) %> <%= t("micropost.ago") %>
    </small>
    <p><%= micropost.content %></p>

    <% if current_user == micropost.user %>
      <%= button_to t("micropost.delete"),
          micropost_path(micropost),
          method: :delete,
          data: { confirm: t("micropost.confirm_delete") },
          class: "btn btn-sm btn-danger" %>
    <% end %>
  </div>
</div>
<hr>
