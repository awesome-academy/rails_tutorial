<%= form_with model: user, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, t("users.form.name"), class: "form-label" %>
    <%= f.text_field :name, class: "form-control #{'is-invalid' if user.errors[:name].any?}" %>
    <% user.errors[:name].each do |msg| %>
      <div class="invalid-feedback"><%= msg %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :email, t("users.form.email"), class: "form-label" %>
    <%= f.email_field :email, class: "form-control #{'is-invalid' if user.errors[:email].any?}" %>
    <% user.errors[:email].each do |msg| %>
      <div class="invalid-feedback"><%= msg %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password, t("users.form.password"), class: "form-label" %>
    <%= f.password_field :password, class: "form-control #{'is-invalid' if user.errors[:password].any?}" %>
    <% if user.persisted? %>
      <small class="form-text text-muted"><%= t("users.edit.password_hint") %></small>
    <% end %>
    <% user.errors[:password].each do |msg| %>
      <div class="invalid-feedback"><%= msg %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t("users.form.password_confirmation"), class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control #{'is-invalid' if user.errors[:password_confirmation].any?}" %>
    <% user.errors[:password_confirmation].each do |msg| %>
      <div class="invalid-feedback"><%= msg %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit user.persisted? ? t("users.edit.submit") : t("users.form.submit"), 
                 class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
