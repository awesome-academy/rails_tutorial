<% provide :title, @user.name %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title">
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
        
        <div class="user-info">
          <p><strong><%= t(".email") %>:</strong> <%= @user.email %></p>
        </div>
        
        <div class="mt-3">
          <%= link_to t(".edit"), edit_user_path(@user), class: "btn btn-warning" %>
          <%= link_to t(".back_to_list"), users_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
