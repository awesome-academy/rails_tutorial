<% provide :title, t(".title") %>

<div class="row">
  <div class="col-md-12">
    <h1><%= t(".title") %></h1>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th><%= t(".name") %></th>
            <th><%= t(".email") %></th>
            <th colspan="3" class="text-center"><%= t(".actions") %></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to t(".show"), user, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to t(".edit"), edit_user_path(user), class: "btn btn-warning btn-sm" %></td>
              <td>
                <%= link_to t(".delete"), user, 
                            method: :delete, 
                            data: { confirm: t(".confirm_delete") },
                            class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-3">
      <%= link_to "New User", new_user_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
