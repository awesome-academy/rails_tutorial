<% provide(:title, "All Users") %>
<h1>All Users</h1>
<nav aria-label="Pages">
      <ul class="pagination">
        <% if @pagy.prev %>
          <li class="page-item">
            <%= link_to t('pagy.nav.previous').html_safe, url_for(page: @pagy.prev), class: 'page-link', aria: { label: t('pagy.nav.previous') } %>
          </li>
        <% else %>
          <li class="page-item disabled">
            <span class="page-link" aria-disabled="true" aria-label="<%= t('pagy.nav.previous') %>">&lt;</span>
          </li>
        <% end %>
        <% @pagy.series.each do |item| %>
          <li class="page-item <%= 'active' if item == @pagy.page %>">
            <%= link_to t('pagy.nav.page', page: item), url_for(page: item), class: 'page-link' %>
          </li>
        <% end %>
        <% if @pagy.next %>
          <li class="page-item">
            <%= link_to t('pagy.nav.next').html_safe, url_for(page: @pagy.next), class: 'page-link', aria: { label: t('pagy.nav.next') } %>
          </li>
        <% else %>
          <li class="page-item disabled">
            <span class="page-link" aria-disabled="true" aria-label="<%= t('pagy.nav.next') %>">&gt;</span>
      </li>
    <% end %>
  </ul>
</nav>

<ul class="users">
  <%= render @users %>
</ul>
