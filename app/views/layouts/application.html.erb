<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) || t("layouts.navbar.brand") %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Gọi file CSS (đã bundle) -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <!-- Gọi file JS (đã bundle) -->
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <%= javascript_importmap_tags %>

  </head>

  <body>
  
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to t("layouts.navbar.brand"), root_path, class: "navbar-brand" %>
         <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- ms-auto đẩy menu sang phải -->
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to t("layouts.navbar.home"), root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("layouts.navbar.help"), pages_help_path, class: "nav-link" %>
            </li>
            <% if logged_in? %>
             <li><%= link_to t("layouts.navbar.users"), user_path(current_user), class: "dropdown-item" %></li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarAccount" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                 <%= t("layouts.navbar.account") %>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarAccount">
                  <li><%= link_to t("layouts.navbar.profile"), current_user, class: "dropdown-item" %></li>
                  <li><%= link_to t("layouts.navbar.settings"), edit_user_path(current_user), class: "dropdown-item" %></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to t("layouts.navbar.log_out"), logout_path, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
                </ul>
              </li>
            <% else %>
              <!-- Chưa đăng nhập => Hiển thị Log in -->
              <li class="nav-item">
                <%= link_to t("layouts.navbar.log_in"), login_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Flash messages & nội dung trang -->
    <div class="container mt-4">
      <% flash.each do |messages_type, message| %>
        <div class="alert alert-<%= messages_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
