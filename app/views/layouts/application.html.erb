<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) || Settings.app_name %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body>
    <!-- Flash Messages with Enhanced Styling -->
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show flash-message" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show flash-message" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <!-- Navbar with Dropdown and Separate Logout -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top navbar-shadow">
      <div class="container">
        <%= link_to Settings.navbar.brand, root_path, class: "navbar-brand text-warning fw-bold" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to t("navbar.home"), root_path, class: "nav-link text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to t("navbar.help"), help_path, class: "nav-link text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to t("navbar.contact"), contact_path, class: "nav-link text-light" %>
            </li>
          </ul>
          <ul class="navbar-nav ms-auto">
            <% if logged_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-light" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= current_user.name || "User" %> <i class="bi bi-chevron-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                  <li><%= link_to t("navbar.users"), users_path, class: "dropdown-item" %></li>
                  <li><%= link_to t("navbar.profile"), user_path(current_user), class: "dropdown-item" %></li>
                </ul>
              </li>
              <li class="nav-item">
                <%= button_to t("navbar.log_out"), logout_path, method: :delete, class: "nav-link btn btn-danger", data: { turbo: false } %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to t("navbar.login"), login_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to t("navbar.register"), register_path, class: "nav-link text-light" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5 pt-4">
      <%= yield %>
    </div>
  </body>
</html>
